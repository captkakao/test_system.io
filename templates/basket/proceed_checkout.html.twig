{% extends 'base.html.twig' %}

{% block title %}Hello BasketController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <h1>Total sum: {{ totalSum }}!</h1>
        <h2>List of goods in basket</h2>
        <ul>
            {% for product in products %}
                <li>
                    <p>{{ product.name }}</p>
                </li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}

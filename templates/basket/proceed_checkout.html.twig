{% extends 'base.html.twig' %}

{% block title %}Proceed to checkout!{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <div>
            <h1>Total sum: {{ totalSum }}!</h1>
            <h1>Total sum with tax: {{ totalSumWithTax }}!</h1>
        </div>
        <h3>List of goods in basket</h3>
        <ul>
            {% for good in goods %}
                <li>
                    <p>{{ good.name }} x{{ good.count }}</p>
                    <p>Price: {{ good.price * good.count }}</p>
                </li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}
